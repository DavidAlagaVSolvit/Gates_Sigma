@model VSC.Web.Data.Models.LocalPasswordModel
 
@using (Html.BeginForm("Manage", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="input-control password">
        @Html.PasswordFor(m => m.OldPassword, htmlAttributes: new { @class = "span4", placeholder = "Enter your old password", type = "password" })
        <button class="helper"></button>
    </div>
    <div class="input-control password">
        @Html.PasswordFor(m => m.NewPassword, htmlAttributes: new { @class = "span4", placeholder = "Enter your new password", type = "password" })
        <button class="helper"></button>
    </div>
    <div class="input-control password">
        @Html.PasswordFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "span4", placeholder = "Confirm your new password", type = "password" })
        <button class="helper"></button>
    </div>
 
    <input type="submit" value="Change password"  class="standart"/>
 
}
