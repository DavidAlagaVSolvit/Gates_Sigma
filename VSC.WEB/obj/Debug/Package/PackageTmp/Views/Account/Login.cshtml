@model VSC.Web.Data.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}


<div class="page padding10">
    <div class="row">
        <h2 class="padding10  text-justify  bg-color-vsolvit-orange  fg-color-white"><span></span>@ViewBag.Title  <i class="icon-info-2 place-right" style="font-size: x-large"></i></span></h2>
        <div class="span6 place-left">
            <h5>Use a local account to log in </h5>
            <p class="padding10  text-justify">
               
            </p>
 
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
 


                <div class="input-control text span6 as-block">
                    @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @class = "span4", placeholder = "Enter your username" })
                    <button class="helper"></button>
                </div>


                <div class="input-control password">
                    @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "span4", placeholder = "Enter your password", type = "password" })
                    <button class="helper"></button>
                </div> 
                
                <div>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe, new { @class = "input-control checkbox" })
                </div>
 
                <input type="submit" value="Log in" class="standart" />
        
                <p>
                    @Html.ActionLink("Register", "Register") if you don't have an account.
                </p>
            }

        </div>
 
    </div>

</div>


