@model VSC.Web.Data.Models.LocalPasswordModel
@{
    ViewBag.Title = "Manage Account";
}

<div class="page padding10">
    <div class="row">
        <h2 class="padding10  text-justify  bg-color-vsolvit-orange  fg-color-white"><span>@ViewBag.Title   <i class="icon-info-2 place-right" style="font-size: x-large"></i></span></h2>
        <div class="span6 place-left">
            <h5>Change local account password</h5>
            <p class="padding10  text-justify">
                 
            </p>
            @if (ViewBag.HasLocalPassword)
            {
                @Html.Partial("_ChangePasswordPartial")
            }
            else
            { 
                @Html.Partial("_SetPasswordPartial")
            }
           <p class="message-success fg-color-green">@ViewBag.StatusMessage</p>
           <p>You're logged in as <strong>@User.Identity.Name</strong>.</p>
        </div>
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}